<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gps808.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/backgroud_black_frame"
        android:padding="8dp" >

        <com.gps808.app.view.CircleImageView
            android:id="@+id/item_ranking_headimg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/smyk_logo"
            app:border_color="@color/white"
            app:border_width="1dp" />

        <TextView
            android:id="@+id/item_ranking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/item_ranking_headimg"
            android:text="jia"
            android:textSize="@dimen/body" />

        <TextView
            android:id="@+id/item_ranking_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="No.1"
            android:textColor="@color/app_pink"
            android:textSize="@dimen/body"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/item_ranking_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@id/item_ranking_num"
            android:text="月销量：10万"
            android:textColor="@color/text"
            android:textSize="@dimen/body" />
    </RelativeLayout>

</LinearLayout>