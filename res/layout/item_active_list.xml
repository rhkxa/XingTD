<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="8dp" >

    <ImageView
        android:id="@+id/item_active_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/smyk_home_banner" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:background="@drawable/shape_fav_backgroud"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >

        <CheckBox
            android:id="@+id/item_active_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/selector_fav"
            android:gravity="center"
            android:padding="4dp"
            android:text="123"
            android:textColor="@color/white"
            android:textSize="@dimen/caption" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/half_transparent"
        android:orientation="vertical"
        android:padding="4dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_active_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/red"
                android:padding="2dp"
                android:text="限时特惠"
                android:textColor="@color/white"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/item_active_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:text="双11活动大放送，精彩送不停。赶紧来吧！"
                android:textColor="@color/white"
                android:textSize="@dimen/title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/selector_fav" />

            <TextView
                android:id="@+id/item_active_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:text="2014.10.28"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/selector_fav" />

            <TextView
                android:id="@+id/item_active_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:text="266人参与"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>