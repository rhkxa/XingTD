<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gps808.app"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroud"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="com.gps808.app.fragment.HeaderFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_backgroud_selector"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="8dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="紧急报警"
            android:textColor="@color/text"
            android:textSize="@dimen/body" />

        <com.gps808.app.view.Switch.SwitchButton
            android:id="@+id/police_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:onColor="@color/app_blue" />
    </LinearLayout>

    <View style="@style/blackline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_backgroud_selector"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="8dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="超速报警"
            android:textColor="@color/text"
            android:textSize="@dimen/body" />

        <com.gps808.app.view.Switch.SwitchButton
            android:id="@+id/police_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:onColor="@color/app_blue" />
    </LinearLayout>

    <View style="@style/blackline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_backgroud_selector"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="8dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="进围栏报警"
            android:textColor="@color/text"
            android:textSize="@dimen/body" />

        <com.gps808.app.view.Switch.SwitchButton
            android:id="@+id/police_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:onColor="@color/app_blue" />
    </LinearLayout>

    <View style="@style/blackline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_backgroud_selector"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:padding="8dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="出围栏报警"
            android:textColor="@color/text"
            android:textSize="@dimen/body" />

        <com.gps808.app.view.Switch.SwitchButton
            android:id="@+id/police_type4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:onColor="@color/app_blue" />
    </LinearLayout>

    <View style="@style/blackline" />

</LinearLayout>