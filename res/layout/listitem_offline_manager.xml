<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/space16" >

    <!-- 城市信息部分 -->

    <RelativeLayout
        android:id="@+id/lyCityInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tvCityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="123456"
            android:textColor="@android:color/black"
            android:textSize="@dimen/body" />

        <ImageView
            android:id="@+id/ivExpande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ssdk_recomm_plats_more" />

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/tvCityname"
            android:gravity="center_vertical"
            android:text="30M"
            android:textColor="@color/text"
            android:textSize="@dimen/body" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ivExpande"
            android:text="暂停"
            android:layout_alignBottom="@id/ivExpande"
            android:textColor="@color/red"
            android:textSize="10dp"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/pbDownload"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/tvCityname"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progressDrawable="@drawable/progress_compare_style" />
    </RelativeLayout>

    <!-- 下载进度及管理部分 -->

    <RelativeLayout
        android:id="@+id/lyEditPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pbDownload"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp" >

            <com.gps808.app.view.FancyButton
                android:id="@+id/btnDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:text="加入购物车"
                fancy:fb_defaultColor="@color/tag_blue"
                fancy:fb_focusColor="@color/app_focus_color"
                fancy:fb_radius="2dp"
                fancy:fb_text="下载"
                fancy:fb_textColor="@color/white"
                fancy:fb_textSize="@dimen/caption" />

            <com.gps808.app.view.FancyButton
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:background="@color/app_pink"
                fancy:fb_defaultColor="#ff5f69"
                fancy:fb_focusColor="#ff838b"
                fancy:fb_radius="2dp"
                fancy:fb_text="删除"
                fancy:fb_textColor="@color/white"
                fancy:fb_textSize="@dimen/caption" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>