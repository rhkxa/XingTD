<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_backgroud_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <com.gps808.app.view.FancyButton
        android:id="@+id/item_police_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        fancy:fb_defaultColor="@color/border"
        fancy:fb_focusColor="#8cc9f8"
        fancy:fb_iconResource="@drawable/xtd_icon_gray"
        fancy:fb_iconSize="36dp"
        fancy:fb_radius="2dp"
        fancy:fb_textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/item_police_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="冀234534134"
                android:textColor="@color/black"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/item_police_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="一小时前"
                android:textColor="@color/text"
                android:textSize="@dimen/caption" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/xtd_icon_warn" />

            <TextView
                android:id="@+id/item_police_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入围栏(青县)报警 "
                android:textColor="@color/grayslate"
                android:textSize="@dimen/caption" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:src="@drawable/xtd_action_next" />

</LinearLayout>