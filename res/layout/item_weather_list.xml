<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/full_transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_weather_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:text="个人中心"
        android:textColor="@color/white"
        android:textSize="@dimen/body" />

    <TextView
        android:id="@+id/item_weather_heat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:text="在线"
        android:textColor="@color/white"
        android:textSize="@dimen/body" />

    <TextView
        android:id="@+id/item_weather_cool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/item_weather_heat"
        android:text="在线"
        android:textColor="@color/white"
        android:textSize="@dimen/body" />

    <ImageView
        android:id="@+id/item_weather_image"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:src="@drawable/xtd_action_next" />

</RelativeLayout>