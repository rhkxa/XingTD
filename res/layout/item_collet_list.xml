<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/item_collect_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:button="@drawable/selector_chose"
         android:layout_margin="8dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_collect_image"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="fitXY"
            android:src="@drawable/smyk_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/item_collect_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_collect_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="APPLE iPhone 5s 16G版 4G手机（金色）FDD-LTE/TD-LTE/TD-SCDMA/WCDMA/GSM"
                android:textColor="@color/black"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/item_collect_parameters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="颜色:金色  运行内存	1GB RAM "
                android:textColor="@color/grayslate"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_collect_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价：￥3000 "
                android:textColor="@color/text"
                android:textSize="@dimen/caption" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_collect_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新报价：￥300"
                    android:textColor="@color/red"
                    android:textSize="@dimen/body" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>