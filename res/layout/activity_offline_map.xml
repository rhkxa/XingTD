<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="com.gps808.app.fragment.HeaderFragment" />

    <RadioGroup
        android:id="@+id/map_rg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/online_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radiobutton_line"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="未下载"
            android:textColor="@drawable/tab_text" />

        <RadioButton
            android:id="@+id/offline_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radiobutton_line"
            android:button="@null"
            android:gravity="center"
            android:text="已下载"
            android:textColor="@drawable/tab_text" />
    </RadioGroup>

    <View style="@style/blackline" />

    <ListView
        android:id="@+id/offline_map_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="fill" >
    </ListView>

    <ListView
        android:id="@+id/online_map_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="fill"
        android:visibility="gone" >
    </ListView>

</LinearLayout>