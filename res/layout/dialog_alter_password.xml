<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tag_blue" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="修改密码 "
                android:textColor="@color/white"
                android:textSize="@dimen/title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="旧密码："
                android:textColor="@color/black"
                android:textSize="@dimen/subhead" />

            <EditText
                android:id="@+id/dialog_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/app_backgroud"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textColor="@color/text"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="新密码："
                android:textColor="@color/black"
                android:textSize="@dimen/subhead" />

            <EditText
                android:id="@+id/dialog_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/app_backgroud"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textColor="@color/text"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="再次输入密码："
                android:textColor="@color/black"
                android:textSize="@dimen/subhead" />

            <EditText
                android:id="@+id/dialog_again_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/app_backgroud"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textColor="@color/text"
                android:textSize="@dimen/body" />

            <Button
                android:id="@+id/dialog_alter_password_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/selector_button_blue"
                android:padding="8dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/button" />

            <LinearLayout
                android:id="@+id/dialog_alter_password_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/backgroud_green"
                android:gravity="center" >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    />

                <Button
                    android:id="@+id/dialog_alter_password_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/full_transparent"
                    android:text="400-3011-0000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="如果忘记密码，请联系客服。" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>